<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_select_party_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_select_party_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGray"
        android:text="@string/recent_senders"
        android:padding="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/main_bodytext_textsize"
        />

    <ListView
        android:id="@+id/select_recentparty_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_marginBottom="@dimen/listview_margin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/senderNewContactButton"
            android:layout_weight=".5"
            android:drawableStart="@drawable/ic_person_add_white_24dp"
            android:drawableLeft="@drawable/ic_person_add_white_24dp"
            android:gravity="start|center"
            android:layout_gravity="bottom"
            android:drawablePadding="@dimen/main_button_margin"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="@string/new_contact"
            android:textSize="@dimen/button_textsize"
            android:paddingTop="@dimen/main_button_vertical_padding"
            android:paddingBottom="@dimen/main_button_vertical_padding"
            android:theme="@style/AppTheme.RaisedButton.Accent"
            />
        <Button
            android:id="@+id/continueButton"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:gravity="start|center"
            android:layout_gravity="bottom"
            android:drawablePadding="@dimen/main_button_margin"
            android:drawableStart="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:drawableLeft="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_height="match_parent"
            android:text="@string/continue_process"
            android:textSize="@dimen/button_textsize"
            android:paddingTop="@dimen/main_button_vertical_padding"
            android:paddingBottom="@dimen/main_button_vertical_padding"
            android:theme="@style/AppTheme.RaisedButton.Accent" />
        <!--Button
            android:id="@+id/senderSelectFromContactsButton"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:gravity="start|center"
            android:layout_gravity="bottom"
            android:drawablePadding="@dimen/main_button_margin"
            android:drawableStart="@drawable/ic_perm_contact_calendar_white_24dp"
            android:drawableLeft="@drawable/ic_perm_contact_calendar_white_24dp"
            android:layout_height="match_parent"
            android:text="@string/select_contact"
            android:textSize="@dimen/button_textsize"
            android:paddingTop="@dimen/main_button_vertical_padding"
            android:paddingBottom="@dimen/main_button_vertical_padding"
            android:theme="@style/AppTheme.RaisedButton.Accent" /-->
    </LinearLayout>


</LinearLayout>

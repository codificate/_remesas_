<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/country_listitem_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/listitem_party_country_flag"
        android:layout_width="@dimen/country_flag_width"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/listitem_party_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/country_listitem_textSize" />

</LinearLayout>


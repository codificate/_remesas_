<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_quote_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.iantech.android.remitee.QuoteSummaryFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0">
        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/quote_summary_title1"
                android:layout_width="match_parent"
                android:layout_span="2"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGray"
                android:text="@string/quote_summary_title1"
                android:padding="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/main_bodytext_textsize"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/quote_summary_from_textview"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_medium_margin"
                android:paddingRight="@dimen/title_medium_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textSize="@dimen/main_bodysmalltext_textsize"
                />

            <ImageView
                android:id="@+id/quote_summary_from_imageview"
                android:layout_width="@dimen/country_flag_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingStart="@dimen/activity_vertical_margin"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_span="2"
                android:background="@color/colorLightGray"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/quote_summary_from_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_medium_margin"
                android:paddingRight="@dimen/title_medium_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textSize="@dimen/main_bodysmalltext_textsize"
                />

            <TextView
                android:id="@+id/quote_summary_from_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/title_medium_margin"
                android:paddingEnd="@dimen/title_medium_margin"
                android:paddingLeft="@dimen/title_medium_margin"
                android:paddingStart="@dimen/title_medium_margin"
                android:textSize="@dimen/main_bodysmalltext_textsize"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/quote_summary_title2"
                android:layout_width="match_parent"
                android:layout_span="2"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGray"
                android:text="@string/quote_summary_title2"
                android:padding="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/main_bodytext_textsize"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/quote_summary_to_textview"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/title_medium_margin"
                android:paddingRight="@dimen/title_medium_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textSize="@dimen/main_bodysmalltext_textsize"
                />

            <ImageView
                android:id="@+id/quote_summary_to_imageview"
                android:layout_width="@dimen/country_flag_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                />

        </TableRow>
        <TableRow
            android:layout_width="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_span="2"
                android:background="@color/colorLightGray"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/quote_summary_to_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_medium_margin"
                android:paddingRight="@dimen/title_medium_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textSize="@dimen/main_bodysmalltext_textsize"
                />

            <TextView
                android:id="@+id/quote_summary_to_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/title_medium_margin"
                android:paddingEnd="@dimen/title_medium_margin"
                android:paddingLeft="@dimen/title_medium_margin"
                android:paddingStart="@dimen/title_medium_margin"
                android:textSize="@dimen/main_bodysmalltext_textsize"
                />
        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/quote_summary_confirmbutton"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="@string/action_continue"
        android:enabled="false"
        android:textSize="@dimen/button_textsize"
        android:paddingTop="@dimen/main_button_vertical_padding"
        android:paddingBottom="@dimen/main_button_vertical_padding"
        android:theme="@style/AppTheme.RaisedButton.Accent" />
</RelativeLayout>
